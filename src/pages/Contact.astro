---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="relative flex flex-col items-center justify-center px-4 py-20 bg-background sm:px-6 lg:px-8 lg:py-28">
    <div class="w-full max-w-3xl rounded-3xl border border-border bg-white shadow-xl px-6 py-10 sm:px-10 sm:py-12 md:px-14 md:py-16">
      <form id="contact-form" action="https://formspree.io/f/mgvabodb" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Your Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          />
        </div>

        <!-- Message -->
        <div class="md:col-span-2">
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
          ></textarea>
        </div>

        <!-- Hidden Fields -->
        <input type="hidden" name="_subject" value="New Contact Form Submission" />
        <input type="hidden" name="_next" value="https://yourwebsite.com/thank-you" />

        <!-- Submit -->
        <div class="md:col-span-2 flex justify-center">
          <button
            type="submit"
            class="bg-gradient-to-r from-purple-600 to-blue-500 hover:from-purple-700 hover:to-blue-700 text-white px-6 py-3 rounded-xl font-semibold text-sm sm:text-base transition duration-300 shadow-lg w-full sm:w-auto"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>

    <script src="/js/contact.js?v=1.0" type="module"></script>
  </section>
</BaseLayout>
