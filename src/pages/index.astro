---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <!-- Hero Section with Animated Background -->
  <div class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated Background Gradient -->
  <div class="absolute inset-0 w-full h-full bg-gradient-to-br from-indigo-800 via-purple-700 to-blue-600 opacity-90">
    <div class="absolute inset-0 bg-[url('/noise.svg')] opacity-20"></div>
  </div>
  
  <!-- Animated Shapes -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-60 sm:w-80 h-60 sm:h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob"></div>
